<% frame_id = dom_id(LineItemDate) %>
<% turbo_refreshes_with(method: :morph) %>

<main class="container mb-xxxxl">
  <%= link_to(sanitize("&larr; Back to quotes"), quotes_path) %>

  <div class="header">
    <h1><%= @quote.name %></h1>

    <%= link_to("New date", new_quote_line_item_date_path(@quote), data: { turbo_frame: frame_id }, class: "btn btn--primary") %>
  </div>

  <%= turbo_frame_tag(frame_id) %>
  <%= turbo_frame_tag("line_item_dates") do %>
    <%= render(@line_item_dates, quote: @quote) %>
  <% end %>
</main>

<%= turbo_frame_tag(@quote, :total) do %>
  <%= render("quotes/total", quote: @quote) %>
<% end %>
